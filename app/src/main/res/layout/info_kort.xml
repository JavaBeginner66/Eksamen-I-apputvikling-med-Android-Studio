<androidx.cardview.widget.CardView
    android:id="@+id/kort"
    android:layout_width="match_parent"
    android:layout_height="@dimen/kort_hoyde"
    app:cardBackgroundColor="@color/colorCardBackground"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_marginRight="@dimen/vertical_card_margin_horizontal"
    android:layout_marginLeft="@dimen/vertical_card_margin_horizontal"
    android:layout_marginTop="@dimen/vertical_card_margin_vertical"
    android:layout_marginBottom="@dimen/vertical_card_margin_vertical"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    android:foreground="?android:selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/kort_bilde"
            android:layout_width="@dimen/bilde_dimens"
            android:layout_height="@dimen/bilde_dimens"

            android:scaleType="centerCrop"
            android:src="@drawable/smil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/bilde_marginright"
            android:contentDescription="@string/bilde_content_description"
            android:layout_marginEnd="@dimen/bilde_marginright" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/info_kort_hoved_layout_bredde"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/info_kort_margin"

            app:layout_constraintEnd_toStartOf="@+id/kort_bilde"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/kort_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/kort_info_marginTop"
                    android:layout_marginBottom="@dimen/kort_info_marginBottom"
                    android:text=""
                    android:textColor="@color/textWhitePrimary"
                    android:textSize="@dimen/info_kort_tekst_size" />

                <TextView
                    android:id="@+id/kort_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/kort_info_marginTop"
                    android:layout_marginBottom="@dimen/kort_info_marginBottom"
                    android:text=""
                    android:textColor="@color/textWhitePrimary"
                    android:textSize="@dimen/info_kort_tekst_size" />

                <TextView
                    android:id="@+id/kort_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/kort_info_marginTop"
                    android:layout_marginBottom="@dimen/kort_info_marginBottom"
                    android:text=""
                    android:textColor="@color/textWhitePrimary"
                    android:textSize="@dimen/info_kort_tekst_size" />

                <TextView
                    android:id="@+id/kort_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/kort_info_marginTop"
                    android:layout_marginBottom="@dimen/kort_info_marginBottom"
                    android:text=""
                    android:textColor="@color/textWhitePrimary"
                    android:textSize="@dimen/info_kort_tekst_size" />

                <TextView
                    android:id="@+id/kort_text_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/kort_info_marginTop"
                    android:layout_marginBottom="@dimen/kort_info_marginBottom"
                    android:text=""
                    android:textColor="@color/textWhitePrimary"
                    android:textSize="@dimen/info_kort_tekst_size" />

                <!-- Brukes bare til Ã¥ lagre id -->
                <TextView
                    android:id="@+id/kort_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
